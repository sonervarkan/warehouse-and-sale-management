doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

        title Multiple Query Panel
    body 
        nav.navbar.bg-primary.navbar-dark
            .container-fluid
                .row.w-100.d-flex.align-items-center
                    .col
                        a.navbar-brand(href="/") Home Page
                        a.navbar-brand(href="/data-queries") Query Pages
                    .col.text-center
                        h1.text-white Multiple Query Panel

                    .col.text-end
                       
                        i.fas.fa-print.fa-2x(style="color: white;")

        .container.mt-4.pt-5
            form(action="/sales/multiple-query" method="GET")
                .mb-3
                    select.form-select(name="attribute")
                        option(value="stock_code") Stock Code
                        option(value="sale_id") Sale Id
                        option(value="productId") Product Id
                        option(value="customerId") Customer Id
                        option(value="invoiceId") Invoce Id
                        option(value="date") Date
                        option(value="invoice_number") Invoce Number
                        option(value="customer_surname") Customer Surname
                        option(value="product_name") Product Name 
                        option(value="category") Category
                        
                .mb-3
                    input.form-control(type="text" name="value" placeholder="Value" required)
                    button.btn.btn-primary.mt-2(type="submit") Search
            .div#toPrint
                table.table 
                    thead 
                        tr 
                            th Stock Code
                            th Sale id
                            th Sale Quantity 
                            th Total Price
                            th Product Id
                            th Customer Id
                            th Invoice Id
                            th Customer Name
                            th Customer Surname
                            th Email
                            th Address
                            th Product Name
                            th Category
                            th Description
                            th Price
                            th Invoice Number
                            th Date
                    tbody 
                        each data in datas 
                            tr 
                                td=data.stock_code
                                td=data.sale_id
                                td=data.sale_quantity
                                td=data.total_price
                                td=data.productId
                                td=data.customerId
                                td=data.invoiceId
                                td=data.customer_name
                                td=data.customer_surname
                                td=data.email
                                td=data.address
                                td=data.product_name
                                td=data.category
                                td=data.description
                                td=data.price
                                td=data.invoice_number
                                td=data.date
        script(src="/print.js")
               
