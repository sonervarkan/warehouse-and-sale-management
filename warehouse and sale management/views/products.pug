doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        title Product Inquiry Panel
    body 
        nav.navbar.bg-primary.navbar-dark
                .container-fluid
                    .row.w-100.d-flex.align-items-center
                        .col
                            a.navbar-brand(href="/") Home Page
                            a.navbar-brand(href="/data-queries") Query Pages
                        .col.text-center
                            h1.text-white Product Inquiry Panel
                        .col.text-end                      
                            i.fas.fa-print.fa-2x(style="color: white;")
        
        .container.mt-4.pt-5
            form(action="/sales/products" method="GET")
                .mb-3
                    select.form-select(name="attribute")
                        option(value="product_id") Id
                        option(value="product_name") Name
                        option(value="category") Category
                        option(value="price") Price
                .mb-3
                    input.form-control(type="text" name="value" placeholder="Value" required)
                    button.btn.btn-primary.mt-2(type="submit") Search
            .div#toPrint
                table.table 
                    thead 
                        tr 
                            th id
                            th Name 
                            th Category
                            th Price 
                            th Description
                    tbody 
                        each data in datas 
                            tr 
                                td=data.product_id
                                td=data.product_name
                                td=data.category
                                td=data.price
                                td=data.description
        script(src="/print.js")
