    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script.
      function getRandomPosition(element) {
        const x = window.innerWidth - element.offsetWidth;
        const y = window.innerHeight - element.offsetHeight; 
        return {
          x: Math.floor(Math.random() * x),
          y: Math.floor(Math.random() * y)
        };
      }

      function moveElement(element) {
        const { x, y } = getRandomPosition(element);
        element.style.position = "absolute"; 
        element.style.left = `${x}px`;
        element.style.top = `${y}px`;
      }

      const movingImage = document.querySelector(".moving-image");

      moveElement(movingImage);

      setInterval(() => {
        moveElement(movingImage);
      }, 2000);

     
